<div class="well">
  <%= form_for(@grocery) do |f| %>
    <% if @grocery.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@grocery.errors.count, "error") %> prohibited this grocery from being saved:</h2>

        <ul>
        <% @grocery.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :target %>
      <%= f.text_field :target %>
    </div>
    <div class="field">
      <%= f.label :unit_type_id %>
      <%= f.select "unit_type_id", options_from_collection_for_select(UnitType.all, "id", "name", @grocery.unit_type_id) %>
    </div>
    <div class="actions">
      <%= f.submit nil, :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>
